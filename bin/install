#!/usr/bin/env zsh

# Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
brew bundle

# Symlinks
repo_root=$(git rev-parse --show-toplevel)

mkdir -p ~/.config
ln -svf $repo_root/.zshrc ~
ln -sfv $repo_root/config/mise ~/.config

source ~/.zshrc
